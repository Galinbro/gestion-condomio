<div class="card shadow-lg border-0 rounded-lg">
  <div class="card-header">
    <h3 class="text-center font-weight-light my-4"> Editar usuario </h3>
  </div>
  <div class="card-body">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :firstname %>
          <%= f.text_field :firstname, autofocus: true, autocomplete: 'first name', class: 'form-control' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :lastname %>
          <%= f.text_field :lastname, autofocus: true, autocomplete: 'last name', class: 'form-control' %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :role_id %>
        <%= f.collection_select :role_id, Role.all, :id, :name, { include_blank: false }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.submit "Actualizar", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <div class="card-footer text-center">
      <div class="small">
        <%= link_to t('.back'), :back %>
      </div>
    </div>
</div>      